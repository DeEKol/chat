{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "components/*": ["components/*"],
      "layout/*": ["layout/*"],
      "routes/*": ["routes/*"],
      "store/*": ["store/*"],
      "types/*": ["types/*"],
      "lib/*": ["lib/*"],
      "UI/*": ["UI/*"],
      "hooks/*": ["hooks/*"],
    }
  },
  "include": [
    "src"
  ]
}
